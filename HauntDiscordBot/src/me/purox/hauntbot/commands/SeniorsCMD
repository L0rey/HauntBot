package me.purox.hauntbot.commands;

import me.purox.hauntbot.options.Secrets;
import me.purox.hauntbot.utils.Logger;
import net.dv8tion.jda.core.entities.*;

/**
 * Created by Lorenzo on 24/06/2017.
 */
public class SeniorsCMD {

    static SeniorsCMD instance;

    public static SeniorsCMD getInstance() {

        if(instance == null) {

            instance = new SeniorsCMD();

        }

        return instance;
    }

    public void sendSeniorsMessage (TextChannel channel, User user) {

        if(channel == null) {
            Logger.getLogger().log(" tried to send a message in a null channel ");
            return;
        }

        if (!channel.getId().equalsIgnoreCase("324157583768289282") && !channel.getId().equalsIgnoreCase(Secrets.TEST_CHANNEL_ID)) {
            Logger.getLogger().log(" Tried to use a forbidden channel for !seniors");
            return;
        }

        if (user == null) {
            Logger.getLogger().log("Tried to mention a null user");
            return;
        }

        Guild guild = channel.getGuild();
        String[] ID = new String[]{"UHC Staff","Minigames Staff","Minigames Seniors","Managers","UHC Seniors", "UHC Managers", "Admins", "Owners", "God"};
        Member Member = guild.getMemberById(user.getId());

        boolean allow = false;
        for (Role r : Member.getRoles()){
            for(String s : ID) {
                if(r.getName().toLowerCase().equals(s.toLowerCase())) {
                    allow = true;
                }
            }
        }

        String seniors = "";
        for (Member member : channel.getMembers()) {
            for (Role role : member.getRoles()) {
                if(role.getName().contains("Seniors")) {
                    seniors += member.getAsMention() + " ";
                }
            }
        }

        if(allow) {
            if (seniors != "") {
                channel.sendMessage(user.getName() + " is requesting help! Tagging eligible online Seniors to help! " + seniors).queue();
            } else {
                channel.sendMessage(user.getAsMention() + ", no available Seniors could be found ").queue();
            }
        }
    }
}
